<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchedulingAssistant.AssistantPage">
    <ContentPage.Content>
        <ScrollView>
            <ScrollView>
                <StackLayout x:Name="newTaskStack">
                    <StackLayout x:Name="newTaskButtonsStack"
                                 Margin="30, 0, 30, 0"/>
                    <Button Text="New Task"
                            x:Name="newTaskButton"
                            FontSize="15"
                            BackgroundColor="#FFB33E"
                            Margin = "30, 20, 30, 0"
                            Clicked="NewTaskClicked" />
                </StackLayout>
            </ScrollView>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>